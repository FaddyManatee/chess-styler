{
  "name": "chess.com styler",
  "version": "0.0.0",
  "manifest_version": 3,
  "description": "An extension to customize your chess.com board and pieces.",
  "icons": {
    "16": "icons/16x16.png",
    "32": "icons/32x32.png",
    "48": "icons/48x48.png",
    "128": "icons/128x128.png"
  },

  "action": {
    "default_popup": "popup/popup.html"
  },

  "host_permissions": [
    "https://www.chess.com/*"
  ],

  "permissions": [
    
  ],

  "content_scripts": [
    {
      "matches": ["https://www.chess.com/*"],
      "js": ["extension/inject.js"]
    }
  ]  
}
